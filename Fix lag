-- BLOX FRUITS ULTRA FPS BOOST (EXTREME LOW)
-- By kha

repeat task.wait() until game:IsLoaded()

local Lighting = game:GetService("Lighting")
local Terrain = workspace:FindFirstChildOfClass("Terrain")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- T·∫Øt to√†n b·ªô lighting n·∫∑ng
pcall(function()
    Lighting.GlobalShadows = false
    Lighting.Brightness = 1
    Lighting.FogEnd = 9e9
    Lighting.EnvironmentDiffuseScale = 0
    Lighting.EnvironmentSpecularScale = 0
end)

-- X√≥a to√†n b·ªô effect
for _, v in pairs(Lighting:GetChildren()) do
    if v:IsA("PostEffect") then
        v:Destroy()
    end
end

-- T·ªëi ∆∞u n∆∞·ªõc
pcall(function()
    Terrain.WaterWaveSize = 0
    Terrain.WaterWaveSpeed = 0
    Terrain.WaterReflectance = 0
    Terrain.WaterTransparency = 1
end)

-- H√ÄM d·ªçn map c·ª±c m·∫°nh
local function ClearMap()
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("ParticleEmitter")
        or v:IsA("Trail")
        or v:IsA("Smoke")
        or v:IsA("Fire")
        or v:IsA("Sparkles")
        or v:IsA("Explosion")
        or v:IsA("Decal")
        or v:IsA("Texture") then
            pcall(function()
                v:Destroy()
            end)
        elseif v:IsA("MeshPart")
        or v:IsA("Part")
        or v:IsA("UnionOperation") then
            pcall(function()
                v.Material = Enum.Material.Plastic
                v.Reflectance = 0
                v.CastShadow = false
            end)
        end
    end
end

ClearMap()

-- Gi·∫£m ch·∫•t l∆∞·ª£ng render xu·ªëng th·∫•p nh·∫•t
pcall(function()
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
end)

-- T·∫Øt b√≥ng nh√¢n v·∫≠t
local function NoShadowChar(char)
    for _, v in pairs(char:GetDescendants()) do
        if v:IsA("BasePart") then
            v.CastShadow = false
        end
    end
end

if player.Character then
    NoShadowChar(player.Character)
end
player.CharacterAdded:Connect(NoShadowChar)

print("üî• ULTRA LOW MODE ON - MAX FPS!")
