-- ðŸ’€ GOD TIER FPS BOOST (EXTREME MOBILE SAFE)
repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")
local Terrain = workspace:FindFirstChildOfClass("Terrain")
local player = Players.LocalPlayer

------------------------------------------------
-- 1. LIGHTING HARD RESET
------------------------------------------------
pcall(function()
    Lighting.GlobalShadows = false
    Lighting.Brightness = 0
    Lighting.ClockTime = 12
    Lighting.FogStart = 0
    Lighting.FogEnd = 9e9
    Lighting.EnvironmentDiffuseScale = 0
    Lighting.EnvironmentSpecularScale = 0
    Lighting.OutdoorAmbient = Color3.new(1,1,1)
end)

for _,v in pairs(Lighting:GetChildren()) do
    pcall(function() v:Destroy() end)
end

------------------------------------------------
-- 2. WATER DESTROY EFFECT
------------------------------------------------
pcall(function()
    if Terrain then
        Terrain.WaterWaveSize = 0
        Terrain.WaterWaveSpeed = 0
        Terrain.WaterReflectance = 0
        Terrain.WaterTransparency = 1
    end
end)

------------------------------------------------
-- 3. WORLD ULTRA OPTIMIZE
------------------------------------------------
local function ExtremeOptimize(root)
    for _,v in pairs(root:GetDescendants()) do
        
        if v:IsA("BasePart") then
            v.Material = Enum.Material.Plastic
            v.Reflectance = 0
            v.CastShadow = false

            -- giáº£m collision khÃ´ng cáº§n thiáº¿t
            if not v:IsDescendantOf(player.Character or nil) then
                v.CanCollide = v.CanCollide
            end

        elseif v:IsA("Decal") or v:IsA("Texture") then
            v.Transparency = 1

        elseif v:IsA("ParticleEmitter")
        or v:IsA("Trail")
        or v:IsA("Smoke")
        or v:IsA("Fire")
        or v:IsA("Sparkles")
        or v:IsA("Beam")
        or v:IsA("Explosion") then
            v.Enabled = false
        end
    end
end

ExtremeOptimize(workspace)

------------------------------------------------
-- 4. CHARACTER CLEAN
------------------------------------------------
local function OptimizeChar(char)
    for _,v in pairs(char:GetDescendants()) do
        if v:IsA("BasePart") then
            v.Material = Enum.Material.Plastic
            v.CastShadow = false
        elseif v:IsA("Accessory") then
            if v:FindFirstChild("Handle") then
                v.Handle.Transparency = 1
            end
        elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
            v.Enabled = false
        end
    end
end

if player.Character then
    OptimizeChar(player.Character)
end
player.CharacterAdded:Connect(OptimizeChar)

------------------------------------------------
-- 5. FORCE LOWEST RENDER
------------------------------------------------
pcall(function()
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
    settings().Rendering.MeshPartDetailLevel = Enum.MeshPartDetailLevel.Level01
end)

------------------------------------------------
-- 6. AUTO CLEAN LOOP (ANTI EFFECT SPAWN)
------------------------------------------------
task.spawn(function()
    while true do
        task.wait(2)
        pcall(function()
            ExtremeOptimize(workspace)
        end)
    end
end)

------------------------------------------------
print("ðŸ’€ðŸ”¥ GOD TIER FPS BOOST ENABLED")