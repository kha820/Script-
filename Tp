-- TP PRO FINAL (All in one)

local player = game.Players.LocalPlayer
local hrp
local saved = {}
local minimized = false

-- Update character (FIX RESPAWN)
local function updateChar(char)
    hrp = char:WaitForChild("HumanoidRootPart")
end

updateChar(player.Character or player.CharacterAdded:Wait())
player.CharacterAdded:Connect(updateChar)

-- GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "TP_PRO_FINAL"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0,200,0,260)
frame.Position = UDim2.new(0,50,0,200)
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.BackgroundTransparency = 0.35
frame.Active = true
frame.Draggable = true
frame.BorderSizePixel = 0

-- Title bar
local titleBar = Instance.new("Frame", frame)
titleBar.Size = UDim2.new(1,0,0,30)
titleBar.BackgroundTransparency = 1

local title = Instance.new("TextLabel", titleBar)
title.Size = UDim2.new(0.7,0,1,0)
title.Text = "TP PRO"
title.TextScaled = true
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(0,255,200)

-- Minimize
local mini = Instance.new("TextButton", titleBar)
mini.Size = UDim2.new(0.15,0,1,0)
mini.Position = UDim2.new(0.7,0,0,0)
mini.Text = "➖"
mini.TextScaled = true
mini.BackgroundColor3 = Color3.fromRGB(255,200,0)

-- Close
local close = Instance.new("TextButton", titleBar)
close.Size = UDim2.new(0.15,0,1,0)
close.Position = UDim2.new(0.85,0,0,0)
close.Text = "X"
close.TextScaled = true
close.BackgroundColor3 = Color3.fromRGB(255,80,80)

-- Container
local container = Instance.new("Frame", frame)
container.Size = UDim2.new(1,0,1,-30)
container.Position = UDim2.new(0,0,0,30)
container.BackgroundTransparency = 1

-- Slots
for i = 1,5 do
    local y = (i-1)*45

    local set = Instance.new("TextButton", container)
    set.Size = UDim2.new(0.5,0,0,40)
    set.Position = UDim2.new(0,0,0,y)
    set.Text = "SET "..i
    set.BackgroundColor3 = Color3.fromRGB(0,170,255)
    set.BackgroundTransparency = 0.2
    set.TextScaled = true

    local tp = Instance.new("TextButton", container)
    tp.Size = UDim2.new(0.5,0,0,40)
    tp.Position = UDim2.new(0.5,0,0,y)
    tp.Text = "TP "..i
    tp.BackgroundColor3 = Color3.fromRGB(0,255,120)
    tp.BackgroundTransparency = 0.2
    tp.TextScaled = true

    set.MouseButton1Click:Connect(function()
        if hrp then
            saved[i] = hrp.CFrame
            set.Text = "ĐÃ LƯU "..i
            task.wait(1)
            set.Text = "SET "..i
        end
    end)

    tp.MouseButton1Click:Connect(function()
        if saved[i] and hrp then
            hrp.CFrame = saved[i]
        else
            tp.Text = "LỖI!"
            task.wait(1)
            tp.Text = "TP "..i
        end
    end)
end

-- Minimize toggle
mini.MouseButton1Click:Connect(function()
    minimized = not minimized
    container.Visible = not minimized

    if minimized then
        frame.Size = UDim2.new(0,200,0,30)
        mini.Text = "➕"
    else
        frame.Size = UDim2.new(0,200,0,260)
        mini.Text = "➖"
    end
end)

-- Close
close.MouseButton1Click:Connect(function()
    gui:Destroy()
end)