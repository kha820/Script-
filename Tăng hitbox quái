-- Chạy trong ServerScriptService
local Workspace = game:GetService("Workspace")

-- Kích thước hitbox mong muốn cho quái
local newHitboxSize = Vector3.new(10, 10, 10) -- thay số theo ý bạn

-- Hàm kiểm tra xem model có phải quái không
local function isEnemy(model)
    -- Giả sử quái được đặt trong folder "Enemies" trong workspace
    return model:IsDescendantOf(Workspace:WaitForChild("Enemies"))
end

-- Hàm tăng hitbox cho quái
local function enlargeEnemyHitbox(enemy)
    if enemy:FindFirstChild("HumanoidRootPart") then
        local hrp = enemy.HumanoidRootPart
        hrp.Size = newHitboxSize
        hrp.Transparency = 0.5 -- nhìn thấy hitbox nếu muốn
        hrp.CanCollide = true
    end
end

-- Tăng hitbox cho quái đã có
for _, enemy in pairs(Workspace.Enemies:GetChildren()) do
    if enemy:IsA("Model") and enemy:FindFirstChild("Humanoid") then
        enlargeEnemyHitbox(enemy)
    end
end

-- Tăng hitbox cho quái mới spawn
Workspace.Enemies.ChildAdded:Connect(function(enemy)
    if enemy:IsA("Model") and enemy:FindFirstChild("Humanoid") then
        enlargeEnemyHitbox(enemy)
    end
end)
